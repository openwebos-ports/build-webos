##

# LAYER_CONF_VERSION is increased each time build/conf/bblayers.conf
# changes incompatibly
LCONF_VERSION = "5"

PALMDIR ?= "@abs_top_srcdir@"
TMPDIR := "@abs_top_builddir@"
BBPATH = "${PALMDIR}:${TMPDIR}"

OECORE_LAYER ?= "${PALMDIR}/openembedded-core/meta"
METAOE_LAYER ?= "${PALMDIR}/meta-openembedded/meta-oe"
WEBOS_LAYER ?= "${PALMDIR}/meta-webos"
WEBOS_PORTS_LAYER ?= "${PALMDIR}/meta-webos-ports"
META_FSO_LAYER ?= "${PALMDIR}/meta-smartphone/meta-fso"
META_SAMSUNG_LAYER ?= "${PALMDIR}/meta-smartphone/meta-samsung"
META_ANDROID_LAYER ?= "${PALMDIR}/meta-smartphone/meta-android"
META_ROCK_LAYER ?= "${PALMDIR}/meta-rock"

BBFILES ?= ""
BBLAYERS ?= " \
  ${WEBOS_PORTS_LAYER} \
  ${WEBOS_LAYER} \
  ${META_ROCK_LAYER} \
  ${META_SAMSUNG_LAYER} \
  ${META_ANDROID_LAYER} \
  ${META_FSO_LAYER} \
  ${METAOE_LAYER} \
  ${OECORE_LAYER} \
  "
